<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        >

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher_round" />
        
        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_foto"
            android:layout_marginLeft="16dp"
            android:text="Nama Tempat"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/ic_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama"
            android:layout_toRightOf="@id/iv_foto"
            android:src="@drawable/iconLocation"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_alamat"
            android:layout_below="@id/tv_nama"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Alamat"
            />

        <ImageView
            android:id="@+id/ic_jam_operasional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_foto"
            android:layout_below="@id/ic_alamat"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/iconTime"
            />

        <TextView
            android:id="@+id/tv_jam_operasional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_jam_operasional"
            android:layout_below="@id/tv_alamat"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Jam Operasional"
        />

        <ImageView
            android:id="@+id/ic_tarif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_jam_operasional"
            android:src="@drawable/iconTarif"
            android:layout_toRightOf="@id/iv_foto"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_tarif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_tarif"
            android:layout_below="@id/tv_jam_operasional"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Tarif"
            />

        <ImageView
            android:id="@+id/ic_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconRating"
            android:layout_below="@id/ic_tarif"
            android:layout_toRightOf="@id/iv_foto"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_rating"
            android:layout_below="@id/tv_tarif"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:text="Rating"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>